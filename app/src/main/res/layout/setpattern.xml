<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/set_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_edge"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/set_pattern"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/set_top"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/patone"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/all_edge"
            android:text="@string/patone"
            android:textColor="@color/black" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/patone"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="17dp"
            android:checked="true" />

        <TextView
            android:id="@+id/pattwo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/all_edge"
            android:text="@string/pattwo"
            android:textColor="@color/black" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/pattwo"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="17dp"
            android:checked="true" />
    </RelativeLayout>

</RelativeLayout>
