<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/blue</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray</item>
    </style>

    <!-- Material calendar 스타일 -->


    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>
    <!--Setting 스타일-->
    <style name="SettingsTheme" parent="Theme.Design.NoActionBar">
        <!-- Override properties according to your need -->
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>


    </style>

</resources>
